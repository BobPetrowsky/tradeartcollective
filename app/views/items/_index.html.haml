.items-container
  - if @user.has_items_for_sale? == true
    -@user.items.each do |item|
      -if item.sold != true
        .item{:id => "item-#{item.id}", :style => "background-image: url(#{item.img});"}
          .item-content
            .item-name= item.name
            .item-price
              = "$#{item.price}"
              - if @user.has_wepay_account? && current_user != @user
                = link_to "Buy", "/users/#{@user.id}/#{item.id}/buy", :class => "buy"
            .item-description= item.description
            - if current_user == @user
              .item-actions
                .edit-item= link_to "Edit Item", edit_user_item_path(current_user, item), method: :get, :remote => true, :class => "edit"
  - elsif @user != current_user
    %h1= "#{@user.about.name} does not currently have any items for sale!"
  - if current_user == @user
    .new-item
      .add-item= link_to "Add Item", new_user_item_path(current_user), method: :get, :remote => true
